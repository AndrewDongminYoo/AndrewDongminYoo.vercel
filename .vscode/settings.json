{
    "cSpell.words": [
        "authorable",
        "bloglovin",
        "commitlint",
        "defaultlocale",
        "googlecalendar",
        "nextjs",
        "Noto",
        "signoff",
        "tailwindcss",
        "unoptimized"
    ],
    "cSpell.ignoreRegExpList": [
        "CStyleComment"
    ],
    "cSpell.files": [
        "**/*",
        "!data/repos/*.json",
        "!data/posts/*.md",
        "!typings/*icon*.ts",
        "!components/repos/lang_colors.ts"
    ],
    "explorer.incrementalNaming": "disabled",
    "git.ignoreLimitWarning": true,
    "javascript.suggestionActions.enabled": false,
    "css.lint.unknownAtRules": "ignore",
    "tailwindCSS.validate": true,
    "replacerules.rules": {
        "class attribute": {
            "find": "class=\"([\\w\\d\\-_]+)\"",
            "languages": ["typescriptreact", "javascriptreact"],
            "replace": "className={'$1'}"
        }
    }
}