{
    "cSpell.words": [
        "authorable",
        "bloglovin",
        "Codepen",
        "defaultlocale",
        "fontawesome",
        "fortawesome",
        "googlecalendar",
        "headlessui",
        "nextjs",
        "Noto",
        "signoff",
        "tailwindcss",
        "unoptimized"
    ],
    "cSpell.ignoreRegExpList": ["CStyleComment"],
    "cSpell.files": [
        "**/*",
        "!data/repos/*.json",
        "!data/posts/*.md",
        "!typings/*icon*.ts",
        "!components/repos/lang_colors.ts"
    ],
    "explorer.incrementalNaming": "disabled",
    "git.ignoreLimitWarning": true,
    "javascript.suggestionActions.enabled": false,
    "css.lint.unknownAtRules": "ignore",
    "[css]": {
        "editor.formatOnSave": false
    },
    "[markdown]": {
        "editor.tabSize": 2,
        "editor.insertSpaces": true,
        "editor.wordWrap": "on",
        "cSpell.fixSpellingWithRenameProvider": true,
        "cSpell.advanced.feature.useReferenceProviderWithRename": true,
        "cSpell.advanced.feature.useReferenceProviderRemove": "/^#+\\s/"
    },
    "tailwindCSS.validate": true,
    "replacerules.rules": {
        "class attribute": {
            "find": "class=\"([\\w\\d\\-_]+)\"",
            "languages": ["typescriptreact", "javascriptreact"],
            "replace": "className={'$1'}"
        }
    }
}
